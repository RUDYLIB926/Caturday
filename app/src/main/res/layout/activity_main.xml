<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cis470.caturday.MainActivity"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/one_cat_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="onRadioButtonClicked"
            android:text="show 1 random cat" />

        <RadioButton
            android:id="@+id/four_cats_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="show 4 random cats" />
    </RadioGroup>
    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Show Cats"
        android:layout_below="@+id/one_cat_btn"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="showCats"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pictures">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cat_pic1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cat_pic2"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cat_pic3"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cat_pic4"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"/>
    </GridLayout>



</LinearLayout>
